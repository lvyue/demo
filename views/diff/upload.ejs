<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link href="//cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <header class="navbar navbar-inverse navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <span class="navbar-brand">
          <%= title %>
        </span>
      </div>
      <div class="navbar-collapse collapse">
        &nbsp;
      </div>
    </div>
  </header>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <form method="post" enctype="multipart/form-data" action="/diff/upload">
          <div class="form-group">
            <label for="word">文件</label>
            <input type="file" name="word" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary pull-right">上传文件</button>
        </form>
      </div>
    </div>
    <h3>文件列表</h3>
  <div>
    <table class="table" border="0" cellspacing="0">
      <thead>
        <tr>
          <td>序号</td>
          <td>名称</td>
        </tr>
      </thead>
      <tbody>
        <% attaches.forEach( (attach,index) => { %>
          <tr>
            <td>
              <%= index+1%>
            </td>
            <td>
              <a href="/diff/<%= attach._id %>" target="_blank"><%= attach.name %></a>
            </td>
          </tr>
          <% } )%>
      </tbody>
    </table>
  </div>
  </div>
  <script src="//cdn.bootcss.com/jquery/3.3.1/jquery.min.js"></script>
  <script src="//cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</body>

</html>